<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculties"
    android:orientation="vertical"
    android:background="@drawable/ck"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_centerHorizontal="true"
        android:background="@color/yellow"
        android:id="@+id/txt2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="LIST OF FACULTIES IN MANDAVI"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
      />
</RelativeLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:columnOrderPreserved="false"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:rowCount="3">
        <androidx.cardview.widget.CardView
            android:id="@+id/CEF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/txt3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/com"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:text="COMPUTER ENGINEERING FACULTY\n       DIPLOMA ENGINEERING"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:columnOrderPreserved="false"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:rowCount="3">
        <androidx.cardview.widget.CardView
            android:id="@+id/COM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/txt4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/commer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:text="MANAGEMENT FACULTY\n           (COMMERCE)"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:columnOrderPreserved="false"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:rowCount="3">
        <androidx.cardview.widget.CardView
            android:id="@+id/EDU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/educ"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:text="EDUCATION FACULTY\n     (EDUCATION)"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>