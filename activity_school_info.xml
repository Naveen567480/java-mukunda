<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"
    tools:context=".School_info">
    <TextView
        android:id="@+id/mandavi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANDAVI SECONDARY SCHOOL \n    NAYAGAUN-03,PYUTHAN"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s12"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/bibis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/smc2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
                android:text="विधालय व्यवस्थापन समिती (वि.व्य.स)"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
              />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>